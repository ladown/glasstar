      caption: 'бокалы для вина',
      count: '4 модели',
      href: '/catalog-inner.html'
    },
    {
      caption: 'бокалы для шампанского',
      count: '4 модели',
      href: '/catalog-inner.html'
    },
    {
      caption: 'конячные бокалы',
      count: '5 модели',
      href: '/catalog-inner.html'
    },
    {
      caption: 'для мартини',
